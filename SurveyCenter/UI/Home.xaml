<Window x:Class="SurveyCenter.UI.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurveyCenter.UI"
        mc:Ignorable="d"
        Title="Centro de encuestas" Height="450" Width="800" WindowStartupLocation="CenterScreen" UseLayoutRounding="True">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="0,0,0,1" Grid.Row="0" Height="50">
            <Grid>
                <TextBlock FontFamily="Segoe UI Semibold" FontSize="15" Foreground="Gray" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" 
                           Text="Centro de encuentas" />
            </Grid>
        </Border>

        <Border Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock FontFamily="Segoe UI Semilight" FontSize="26" Foreground="Gray" HorizontalAlignment="Center"
                    Text="¿Qué desea hacer?"/>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Padding" Value="10,3"/>
                            <Setter Property="Margin" Value="3,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button Click="BtnStartAction_Click" Tag="Action.AnswerSurvey" Content="Responder una encuesta"/>
                    <Button Click="BtnStartAction_Click" Tag="Action.CreateSurvey" Content="Crear una encuesta"/>
                    <Button Click="BtnStartAction_Click" Tag="Action.ViewStats" Content="Ver estadísticas"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>
