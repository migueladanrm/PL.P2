<UserControl x:Class="SurveyCenter.UI.Controls.SurveyEditorWizardSingleChoiceItemOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SurveyCenter.UI.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="800">

    <Border x:Name="LayoutRoot">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <xctk:WatermarkTextBox x:Name="TbxCaption" Padding="5,0" VerticalContentAlignment="Center" Watermark="Introdúzca un valor." TextWrapping="Wrap"/>
            <Button Click="BtnRemove_Click" Content="Remover" Grid.Column="1" Padding="10,3" Margin="10,0,0,0"/>

        </Grid>
    </Border>

</UserControl>